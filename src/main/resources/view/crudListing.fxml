<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="stackPane" xmlns="http://javafx.com/javafx/8.0.141">
    <children>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    prefHeight="575.0" prefWidth="815.0" styleClass="theme5" stylesheets="@guicss.css">
            <children>
                <TextField fx:id="txtName" layoutX="49.0" layoutY="101.0" prefHeight="25.0" prefWidth="431.0"
                           promptText="name"/>
                <TextArea fx:id="txtDesc" layoutX="49.0" layoutY="170.0" prefHeight="286.0" prefWidth="431.0"
                          promptText="description"/>
                <TextField fx:id="txtPrice" layoutX="518.0" layoutY="139.0" promptText="price"/>
                <TextField fx:id="txtCost" layoutX="518.0" layoutY="204.0" promptText="cost"/>
                <TextField fx:id="txtStock" layoutX="521.0" layoutY="275.0" promptText="stock"/>
                <JFXButton fx:id="backButton" buttonType="RAISED" layoutX="14.0" layoutY="14.0" onAction="#goBack"
                           styleClass="listings-button" text="%createlisting.back">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="CARET_LEFT" size="20.0"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="createButton" buttonType="RAISED" layoutX="677.0" layoutY="517.0"
                           onAction="#createListing" styleClass="listings-button" text="%createlisting.createbutton"/>
                <JFXButton fx:id="chooseButton" buttonType="RAISED" layoutX="523.0" layoutY="424.0"
                           onAction="#chooseImage" prefHeight="32.0" prefWidth="150.0" styleClass="listings-button"
                           text="%createlisting.filebutton">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="IMAGE"/>
                    </graphic>
                </JFXButton>
                <ComboBox fx:id="comboCat" layoutX="523.0" layoutY="360.0" prefWidth="150.0"
                          promptText="choose category"/>
                <Label layoutX="337.0" layoutY="19.0" styleClass="white-text" text="Create a Listing"/>
                <Label layoutX="49.0" layoutY="69.0" styleClass="white-text" text="Name:"/>
                <Label layoutX="49.0" layoutY="139.0" styleClass="white-text" text="Description:"/>
                <Label layoutX="521.0" layoutY="102.0" styleClass="white-text" text="Price:"/>
                <Label layoutX="518.0" layoutY="170.0" styleClass="white-text" text="Cost:"/>
                <Label layoutX="518.0" layoutY="241.0" styleClass="white-text" text="Stock:"/>
                <Label layoutX="521.0" layoutY="320.0" styleClass="white-text" text="Category:"/>
                <Label fx:id="lableChosenFile" layoutX="525.0" layoutY="464.0" textFill="#ebebeb"/>
            </children>
        </AnchorPane>
    </children>
</StackPane>
