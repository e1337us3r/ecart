<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" styleClass="theme5" stylesheets="@guicss.css"
            xmlns="http://javafx.com/javafx/8.0.141">
    <children>
        <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                 prefHeight="575.0" prefWidth="815.0" styleClass="theme5" stylesheets="@guicss.css"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab closable="false" style="-fx-background-color: #1b263b;" text="%listings.overviewtab">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                </Tab>
                <Tab text="%listings.tabletab">
                    <content>
                        <StackPane>
                            <children>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                            styleClass="theme5" stylesheets="@guicss.css">
                                    <children>
                                        <JFXTreeTableView fx:id="listingsTable" layoutX="13.0" layoutY="18.0"
                                                          prefHeight="464.0" prefWidth="790.0"
                                                          stylesheets="@table.css"/>
                                        <JFXButton fx:id="updateListingButton" buttonType="RAISED" disable="true"
                                                   layoutX="661.0" layoutY="500.0" onAction="#updateListing"
                                                   prefHeight="32.0" prefWidth="131.0" styleClass="listings-button"
                                                   stylesheets="@guicss.css" text="%listings.updatebutton"/>
                                        <JFXButton fx:id="deleteListingButton" buttonType="RAISED" disable="true"
                                                   layoutX="509.0" layoutY="500.0" onAction="#deleteListing"
                                                   prefHeight="32.0" prefWidth="131.0" styleClass="listings-button"
                                                   stylesheets="@guicss.css" text="%listings.deletebutton"/>
                                        <JFXButton fx:id="createListingButton" buttonType="RAISED" layoutX="13.0"
                                                   layoutY="500.0" onAction="#createListing" prefHeight="32.0"
                                                   prefWidth="158.0" styleClass="listings-button"
                                                   stylesheets="@guicss.css" text="%listings.addbutton"/>
                                    </children>
                                </AnchorPane>
                            </children>
                        </StackPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
